{
  "languages": {
    "Elixir": {
      "show_inline_completions": true,
      "format_on_save": {
        "external": {
          "command": "mix",
          "arguments": ["format", "--stdin-filename", "{buffer_path}", "-"]
        }
      },
      "preferred_line_length": 160,
      "tab_size": 2,
      "soft_wrap": "preferred_line_length",
      "language_servers": ["lexical"]
    }
  },
  "lsp": {
    "lexical": {
      "binary": {
        "path": "/Users/velez/Projects/lexical/_build/dev/package/lexical/bin/start_lexical.sh",
        "arguments": [""]
      }
    }
  },
  "theme": "Gruvbox Dark Hard",
  "ui_font_size": 16,
  "buffer_font_size": 14,
  "buffer_font_family": "JetBrains Mono",
  "project_panel": {
    "dock": "right"
  },
  "terminal": {
    "shell": {
      "program": "zsh"
    },
    "font_size": 16
  }
}
