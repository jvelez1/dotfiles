{
  "theme": "Gruvbox Dark Hard",
  "ui_font_size": 14,
  "buffer_font_size": 14,
  "buffer_font_family": "JetBrains Mono",
  "project_panel": {
    "dock": "left"
  },
  "elixir": {
    "preferred_line_length": 64,
    "tab_size": 2,
    "soft_wrap": "preferred_line_length",
    "format_on_save": "on",
    "formatter": {
      "external": {
        "command": "mix format",
        "arguments": [
          "--stdin",
          "--stdin-filename",
          "{buffer_path}"
        ]
      }
    },
    "lsp": {
      "local": {
        "path": "/Projects/lexical/_build/dev/package/lexical/bin/start_lexical.sh",
        "arguments": []
      }
    }
  }
}
